#!/bin/bash

tmux has-session -t hub

if [[ $? -eq 1 ]]; then
    tmux new-session -d -s hub

    tmux new-window -t hub:0 -k -n 'mpd' 'ncmpcpp'
    tmux split-window -v -l 4 -t hub:0 'pmpds'
    tmux select-pane -l
    tmux new-window -t hub:1 -n 'mutt' 'bash -ic mutt'
    tmux new-window -t hub:2 -n 'rss' 'newsbeuter'
    tmux new-window -t hub:3 -n 'tw' 'ttytter'
    tmux new-window -t hub:4 -n 'ps' 'htop'
    tmux new-window -t hub:5

    tmux select-window -t hub:5
fi

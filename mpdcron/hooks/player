# vim: set ft=sh:
if [[ "$MPD_STATUS_STATE" = play ]]; then
    mpdnotify
    echo "<fc=#387BAB>$MPD_SONG_TAG_ARTIST<fc=#4F3F3F> - </fc>$MPD_SONG_TAG_TITLE</fc>" > ~/.mpdcron/pipes/pipe_player
fi

if [[ "$MPD_STATUS_STATE" = stop ]]; then
    # clear line
    echo "" > ~/.mpdcron/pipes/pipe_player
fi


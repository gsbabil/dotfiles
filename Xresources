! Urxvt
URxvt.buffered: true
URxvt.cursorColor: #D0CFD0
URxvt.cursorBlink: true
URxvt*urgentOnBell: true
URxvt.font:-*-terminus-medium-*-*-*-16-*-*-*-*-*-iso8859-*
URxvt.boldFont:-*-terminus-bold-*-*-*-16-*-*-*-*-*-iso8859-*
URxvt*scrollBar: false
URxvt.termName: rxvt-256color
URxvt.shading: 10
! URxvt.depth: 32
! URxvt.background: [90]#121112

! set up extensions
URxvt.perl-ext: default,url-select,clipboard,keyboard-select

! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: firefox

! clipboard
URxvt.keysym.M-C-y: perl:clipboard:copy
URxvt.keysym.M-C-p: perl:clipboard:paste

! keyboard select
URxvt.keysym.M-Escape: perl:keyboard-select:activate

! XTerm
XTerm*faceName:	terminus:normal:pixelsize=12
XTerm*bellIsUrgent:	true
XTerm*scrollBar: false

